<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen">

    <TextView
        android:id="@+id/shelfDescriptionTextViewOnEdit"
        android:layout_width="75dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:hint="Describe..."
        android:text="Description:"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@+id/shelfNameFieldOnEdit"
        app:layout_constraintTop_toBottomOf="@+id/shelfNameFieldOnEdit" />

    <EditText
        android:id="@+id/shelfDescriptionFieldOnEdit"
        android:layout_width="335dp"
        android:layout_height="206dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/shelfDescriptionTextViewOnEdit"
        app:layout_constraintTop_toBottomOf="@+id/shelfDescriptionTextViewOnEdit" />

    <EditText
        android:id="@+id/shelfNameFieldOnEdit"
        android:layout_width="335dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Shelf Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelfNameTextViewOnEdit" />

    <TextView
        android:id="@+id/shelfNameTextViewOnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Shelf Name:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shelfNameFieldOnEdit"
        app:layout_constraintTop_toBottomOf="@+id/editShelfTextViewOnEdit" />

    <TextView
        android:id="@+id/editShelfTextViewOnEdit"
        android:layout_width="269dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="EDIT SHELF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/saveShelfButtonOnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelfDescriptionFieldOnEdit" />

    <Button
        android:id="@+id/cancelShelfButtonOnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/saveShelfButtonOnEdit"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/saveShelfButtonOnEdit"
        app:layout_constraintTop_toBottomOf="@+id/saveShelfButtonOnEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>